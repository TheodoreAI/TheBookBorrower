<!-- navigation bar with an unordered list -->

<div class="books-header">
  <div class="searchFormbox">
    <h1>Search</h1>
    <p>See the full collection below</p>
    <h6><i>*Use ONE field at a time</i></h6>
    <form action="/books" method="POST">
      <div class="form-group my-3">
        <label for="Title" class="fw-bold">Title:</label>
        <input name="Title" class="form-control" id="TitleSearch" />
      </div>
      <div class="form-group my-3">
        <label for="Author" class="fw-bold">Author:</label>
        <input name="Author" class="form-control" id="AuthorSearch" />
      </div>
      <div class="form-group my-3">
        <label for="AuthorNationality" class="fw-bold">Author Nationality:</label>
        <input name="AuthorNationality" class="form-control" id="AuthorNationality" />
      </div>
      <div class="form-group my-3">
        <label for="Language" class="fw-bold">Language:</label>
        <input name="Language" class="form-control" id="LanguageSearch" />
      </div>
      <div class="form-group my-3">
        <label for="Genre" class="fw-bold">Genre:</label>
        <input name="Genre" class="form-control" id="GenreSearch" />
      </div>
      <div class="form-group my-3">
        <label for="Publisher" class="fw-bold">Publisher:</label>
        <input name="Publisher" class="form-control" id="PublisherSearch" />
      </div>
      <div class="form-group my-3">
        <p class="fw-bold">Borrowed?</p>
        <input type="radio" name="isBorrowed" id="yes" value="yes">
        <label for="yes">Yes</label><br>
        <input type="radio" id="no" name="isBorrowed" value="no">
        <label for="no">No</label><br>
      </div>
      <div class="form-group my-3">
        <label for="Borrower" class="fw-bold">Borrower:</label>
        <input name="Borrower" class="form-control" id="BorrowerSearch" />
      </div>
      <input class="btn btn-primary" type="submit" value="Submit">
    </form>

    <hr class="bg-danger border-2 border-top border-primary" />
    <p>If the book isn't on the list, you can add it</p>
    <button id="addBookButton"><a href="/maintain"></a>Add A Book</a></button>
  </div>
</div>

<div class="table-responsive">
  <table id="booksTable" class="booksAndBorrowers">
    <p for="booksTable" class="fs-2 fw-bold text-center">Books in the Database</p>
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Borrowed?</th>
            <th>Current Borrower</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
      {{#each rowsToDisplay}}
      <tr class="borderAround">
        <td><a href="/books/{{id}}">{{title}}</a></td>
        <td>{{author}}</td>
        </td>
        {{#if checkoutstatus}}
        <td>Yes</td>
        {{else}}
        <td>No</td>
        {{/if}}
        {{#if checkoutstatus}}
        <td>{{borrower}}</td>
        {{else}}
        <td> </td>
        {{/if}}
        <form action="/books/borroworreturn/{{id}}" method="POST">
          {{#if checkoutstatus}}
              <td><button type="Submit" name="returnButton" id="returnButton" onclick="return confirm('Are you sure you want to return {{title}}')">Return</button></td>
          {{else}}
              <td><button type="Submit" name="borrowButton" id="borrowButton">Borrow</button></td>
          {{/if}}
        </form>
      </tr>
      {{/each}}
  
    </tbody>
  </table>
</div>
