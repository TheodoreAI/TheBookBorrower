
<div class="individual-info-table" id="individualBookInfo">
  <table><tr><th>Title: </th><td>{{singleBook.title}}</td></tr></table>
  <table><tr><th>Author(s):</th><td>{{singleBook.authors}}</td></tr></table>
  <table><tr><th>Author Nationality: </th><td>{{singleBook.authornationalities}}</td></tr></table>
  <table><tr><th>Pages: </th><td>{{singleBook.pgcount}}</td></tr></table>
  <table><tr><th>Language: </th><td>{{singleBook.lang}}</td></tr></table>
  <table><tr><th>Genre(s):</th><td>{{singleBook.genres}}</td></tr></table>
  <table><tr><th>Publisher: </th><td>{{singleBook.publisher}}</td></tr></table>
  {{#if singleBook.checkoutstatus}}
    <table><tr><th>Borrowed? </th><td>Yes</td></tr></table>
  {{else}}
    <table><tr><th>Borrowed? </th><td>No</td></tr></table>
  {{/if}}
  <table><tr><th>Check Out Date: </th><td>{{singleBook.checkoutdate}}</td></tr></table>
  <table><tr><th>Borrower: </th><td><a href="/borrowers/{{singleBook.borrowerid}}">{{singleBook.borrower}}</a></td></tr></table>
</div>


<div id="singleBookUpdate">
  <form class="update-form" id="updateForm" method="POST" action="/books/{{singleBook.id}}">
    <li>Title: <input type='text' name='bookTitle' value="{{singleBook.title}}"></li><br>
    <li>Author(s): <input type='text' name='bookAuthors' value="{{singleBook.authors}}"></li><br>
    <li>Author Nationality: <input type='text' name='authorNationalities' value= "{{singleBook.authornationalities}}"></li><br>
    <li>Pages: <input type='text' name='bookPages' value="{{singleBook.pgcount}}"></li><br>
    <li>Pages: <input type='text' name='bookLanguage' value="{{singleBook.lang}}"></li><br>
    <li>Pages: <input type='text' name='bookGenres' value="{{singleBook.genres}}"></li><br>
    <li>Pages: <input type='text' name='bookPublisher' value="{{singleBook.publisher}}"></li><br>
    <input type="submit" value="Submit"/>
  </form>
</div>
{{#if singleBook.checkoutstatus}}
    <button id="returnOrBorrow">Return Book</button>
{{else}}
    <button id="returnOrBorrow">Borrow Book</button>
{{/if}}
<button id="updateButton" onclick="showBookUpdateForm()">Update Book</button>
<button id="updateCloser" onclick="closeBookUpdateForm()">Close Book Form</button>

<form id="deleteBookForm" method="GET" action="/books/delete/{{singleBook.id}}">
  <button id="deleteButtonBooks" >Delete Book</button>
</form>

