<div>
    <h2>To correct data for <a href='/books/{{singleBook.id}}'>{{singleBook.title}}</a> , choose one of the fields below:</h2>
    <form class="update-form" method="POST" action="/books/edit/title/{{singleBook.id}}">
      <!-- <li>Title: <input type='text' name='bookTitle' value="{{singleBook.title}}">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span><input type="submit" value="Update Title"></span></li> -->
      <li>Title: <input type='text' name='bookTitle' value="{{singleBook.title}}"></li>
      <button type='submit' id="updateTitleButton" onclick="return confirm('Are you sure you want to change this book\'s title?');">
          Update Title
      </button>
    </form>
    <form class="update-form" method="POST" action="/books/edit/authors/{{singleBook.id}}">
      <li>
        Author(s):
      </li>
      <select multiple name="newAuthors">
          {{#each allAuthors}}
          <option>{{this}}</option>
          {{/each}}
      </select>
      <br/>
      <button type='submit' id="updateAuthorsButton" onclick="return confirm('Are you sure you want to change this book\'s author(s)?');">
          Update Author(s)
      </button>
    </form>
    <form class="update-form" method="POST" action="/books/edit/pagecount/{{singleBook.id}}">
      <li>Page Count: <input type='text' name='bookPages' value="{{singleBook.pgcount}}"></li>
      <button type='submit' id="updatePageCount" onclick="return confirm('Are you sure you want to change this book\'s page count?');">
          Update Page Count
      </button>
    </form>
    <form class="update-form" method="POST" action="/books/edit/language/{{singleBook.id}}">
      <li>
        Language:
      </li>
      <select name="newLanguage">
          {{#each allLanguages}}
          <option>{{this}}</option>
          {{/each}}
      </select>
      <br/>
      <button type='submit' id="updateLanguageButton" onclick="return confirm('Are you sure you want to change this book\'s language?');">
          Update Language
      </button>
    </form>
    <form class="update-form" method="POST" action="/books/edit/genres/{{singleBook.id}}">
      <li>
        Genre(s):
      </li>
      <select multiple name="newGenres">
          {{#each allGenres}}
          <option>{{this}}</option>
          {{/each}}
      </select>
      <br/>
      <button type='submit' id="updateGenresButton" onclick="return confirm('Are you sure you want to change this book\'s genre(s)?');">
          Update Genre(s)
      </button>
    </form>
    <form class="update-form" method="POST" action="/books/edit/publisher/{{singleBook.id}}">
      <li>
        Publisher:
      </li>
      <select name="newPublisher">
          {{#each allPublishers}}
          <option>{{this}}</option>
          {{/each}}
      </select>
      <br/>
      <button type='submit' id="updatePublisher" onclick="return confirm('Are you sure you want to change this book\'s publisher?');">
          Update Publisher
      </button>
    </form>
</div>
<form action="/books/{{singleBook.id}}">
  <button>Close Update Form</button>
</form>
</div>
<script src="updateforms.js" type="text/javascript"></script>
