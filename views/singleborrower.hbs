<div>
  <div class="individual-info-table" id="individualBorrowerInfo">
    <table><tr><th>Name: </th><td>{{singleBorrower.name}}</td></tr></table>
    <table><tr><th>Phone: </th><td>{{singleBorrower.phone}}</td></tr></table>
    <table><tr><th>Email: </th><td>{{singleBorrower.email}}</td></tr></table>
    {{#if singleBorrower.titles}}
      <table><tr><th>Current Borrows: </th><td>{{singleBorrower.titles}}</td></tr></table>
    {{else}}
      <table><tr><th>Current Borrows: </th><td>None</td></tr></table>
    {{/if}}
    <form action="/borrowers/edit/{{singleBorrower.id}}" method="GET">
      <button id="updateButton">Update Borrower</button>
    </form>
  </div>

<script src="updateforms.js" type="text/javascript"></script>
