
<!-- navigation bar with an unordered list -->
<h2>Search the library for borrowers or see the full list below</h2>

<div>
    
        
        <form method="POST" action="/borrowers">
            <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for borrowers" name="borrowerName">
            <button id="searchBorrowerButton" type="submit">Search</button>
        </form>
    
    <p>If the borrower isn't on the list, you can add him below:</p>

    <a href="/maintain"><button id="addBorrowerButton">Add A Borrower</button></a>


</div><br><br>

<div>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Currently borrowing books?</th>
            </tr>
        </thead>
          {{#each borrowers}}
            <tr>
              <td><a href="/borrowers/{{id}}" class="openBorrowerModal">{{name}}</a></td>
              <td>{{phone}}</td>
              <td>{{email}}</td>
              {{#if borrowingstatus}}
                  <td>Yes</td>
              {{else}}
              <td>No</td>
              {{/if}}
            </tr>
          {{/each}}
    </table>
</div>
